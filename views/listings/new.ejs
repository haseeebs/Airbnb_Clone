<% layout("/layouts/boilerplate") %>

<body>
    <div class="row">
        <div class="col-8 offset-2">
            <form action="/listings" method="POST" class="needs-validation" novalidate>

                <div class="mb-3">
                    <label for="title" class="mt-3 form-label">Listing Title</label>
                    <input required class="form-control" type="text" name="listing[title]" placeholder="Enter a catchy title (e.g., Cozy Mountain Retreat)">
                    <div class="valid-feedback">Great choice! This title looks good.</div>
                    <div class="invalid-feedback">Uh-oh! Please provide a catchy title for your listing.</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea required class="form-control" name="listing[description]" placeholder="Describe your listing, amenities, and features"></textarea>
                    <div class="valid-feedback">Fantastic! Your description is detailed and informative.</div>
                    <div class="invalid-feedback">Oops! Your listing description is required.</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input class="form-control" type="text" name="image" placeholder="Paste the URL of your listing image">
                  </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price (per night)</label>
                        <input required class="form-control" type="number" name="listing[price]" placeholder="Set the nightly price (e.g., 2500)">
                        <div class="valid-feedback">Awesome! You've set a valid nightly price.</div>
                        <div class="invalid-feedback">Please enter a valid numeric value for the nightly price.</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input required class="form-control" type="text" name="listing[country]" placeholder="Specify the country of your listing">
                        <div class="valid-feedback">Country specified successfully!</div>
                        <div class="invalid-feedback">Please provide the country for your listing.</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input required class="form-control" type="text" name="listing[location]" placeholder="Enter the specific location of your listing">
                    <div class="valid-feedback">Location details received!</div>
                    <div class="invalid-feedback">Please provide the specific location for your listing.</div>
                </div>

                <button type="submit" class="mb-3 btn btn-dark add-btn">Add</button>

            </form>
        </div>
    </div>
</body>
