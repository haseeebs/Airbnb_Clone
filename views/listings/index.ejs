<% layout("/layouts/boilerplate") %>

<body>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing.id %>" class="listing-card">
                <div class="card card-listing">
                    <img src="<%= listing.image %>" class="card-img-top" alt="..." style="height: 20rem;">
                    <div class="card-body">
                        <p class="card-text">
                            <span class="card-title"><%= listing.title %></span>
                            <br>
                            <span>&#8377; <%= listing.price.toLocaleString("en-IN") %> / Night</span>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>
